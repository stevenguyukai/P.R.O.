.baseView{
    position: absolute;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
}

.upperView{
    position: absolute;
    height: 40vh;
    width: 100vw;
    border-bottom-left-radius: 270rpx;
    border-bottom-right-radius: 270rpx;
    display: flex;
    justify-content: center;
}

.totalBrainScoreView{
    position: absolute;
    height: 12vh;
    width: 100vw;
    border-bottom-left-radius: 45rpx;
    border-bottom-right-radius: 45rpx;
}

.brainScoreImage{
    height: 95%;
    width: 95%;
    margin-top: 2.5%;
    margin-left: 2.5%;
}

.brainScoreName{
    font-size: 90rpx;
    position: absolute;
    text-align: center;
    line-height: 40vh;
}

.totalBrainScoreText{
    font-size: 50rpx;
    position: absolute;
    text-align: center;
    line-height: 12vh;
    margin-left: 5vw;
    width: 45vw;
}

.totalBrainScoreNum{
    font-size: 6vh;
    position: absolute;
    text-align: center;
    line-height: 12vh;
    right: 5vw;
    width: 45vw;
    height: 12vh;
    overflow: hidden;
    letter-spacing: 10rpx;
}

.switchIcon{
    height: 10vw;
    width: 10vw;
    position: absolute;
    align-self: center;
    padding: 3vw;
    z-index: 5;
}

.switchHintText{
    position: absolute;
    align-self: center;
    margin-top: 110rpx;
    font-size: 25rpx;
}

#switchHintTextLeft{
    left: 8.2vw
}

#switchHintTextRight{
    right: 8.2vw
}

.canvasGraph{
    height: 100%;
    width: 100%;
    position: absolute;
  }

.graphSwiper{
    height: 100vh;
    width: 100vw;
    position: absolute;
    z-index: 3;
}


.pictureSwiper{
    height: 20vh;
    width: 20vh;
    padding: 2vh;
    overflow: hidden;
    position: relative;
    border-radius: 20rpx;
    top: 29vh;
}

.textSwiper{
    height: 100vh;
    width: 60vw;
    left: 20vw;
    position: absolute;
}

.textSwiperItem{
    justify-content: center;
    display: flex;
}