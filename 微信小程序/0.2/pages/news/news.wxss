
 
.item {
 top: 10rpx;
 width: 42%;
 height: 300rpx;
 position: relative;
 display: inline-block;
 margin: 30rpx 4%;
 box-shadow: 0px 2px 4px 2px #cccccc;
 border-radius: 15rpx;
 
}
 
.item:first-child {
 margin-top: 0;
}
 
.item .remove {
 height: 100%;
 background-color: red;
 position: absolute;
 top: 0;
 right: -60px;
 display: flex;
 justify-content: center;
 align-items: center;
}
 
.item .number-wrapper {
 height: 100%;
 padding-top: 40rpx;
 flex-direction: column;
 justify-content: space-between;
}
 
.item .ok {
  width: 60px;
  height: 100%;
  padding-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #98f5ff;
}
 
.item .img {
  position: relative;
  background-color: white;
  width: 100%;
  height: 190rpx;
  border-top-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
}
 
.number-wrapper .name {
  position: relative;
  color: #000000;
  font-size: 26rpx;
  overflow: hidden;
  top: -40rpx;
  margin-left: 10rpx;
}
 
.number-wrapper .count-wrapper {
  position: relative;
  left: 10rpx;
  top: -38rpx;
  display: flex;
  color: #989898;
  align-items: center;
  font-size: 20rpx;
}
 
.number-wrapper .count-wrapper .decrease-btn {
 font-size: 20rpx;
}
 
.number-wrapper .count-wrapper .increase-btn {
 font-size: 20rpx;
}
 
.number-wrapper .count-wrapper .count {
 margin: 0 1rpx 0 1rpx;
 font-size: 23rpx;
}
 
.number-wrapper .price-wrapper .people {
 margin-left: 250rpx;
 font-size: 30rpx;
}

